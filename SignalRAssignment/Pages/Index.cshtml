@page
@model SignalRAssignment.Pages.IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-lg-start">
    <h1 class="display-4">Please Log in Here</h1>
    <p>Enter yours details below</p>
    <form>
        <div class="mb-3 w-50">
            <label for="exampleInputEmail1" class="form-label">UserName</label>
            <input type="text" asp-for="Account.UserName" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
        </div>
        
        <div class="mb-3 w-50">
            <label for="exampleInputPassword1" class="form-label">Password</label>
            <input type="password" asp-for="Account.Password" class="form-control" id="exampleInputPassword1">
        </div>
         <span class="msg-error" style="color: red">@ViewData["msg"]</span<br/>
        <button asp-page-handler="Index" type="submit" class="btn btn-primary">Login</button>
    </form>
</div>
